<resources>
    <!-- Base application theme. -->
    <style name="Theme.RoxieTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RoxieTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RoxieTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RoxieTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitle">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="TextContent">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">@dimen/text_content_size</item>
    </style>
</resources>